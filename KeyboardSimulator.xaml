                            <Grid>
                                <TextBlock Text="Backspace" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="15" FontWeight="Normal" />
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
