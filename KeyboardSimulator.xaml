                                <TextBlock Text="⠀[" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                           Margin="0,0,0,10" FontSize="15" />
                                <TextBlock Text="Х" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="7"
                                           FontSize="20" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="12"
