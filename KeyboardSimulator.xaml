                                <TextBlock Text="9" HorizontalAlignment="Center" VerticalAlignment="Top"
                                           Margin="0,7,0,0" FontSize="25" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="10"
