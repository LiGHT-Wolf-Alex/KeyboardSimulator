                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="5"
                                Background="{StaticResource LeftIndexFinger}" x:Name="id6">
                            <Grid>
                                <TextBlock Text="%" HorizontalAlignment="Left" VerticalAlignment="Top"
