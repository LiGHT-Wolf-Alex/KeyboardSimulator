<Window x:Class="Keyboard_simulator.KeyboardSimulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard_simulator"
        mc:Ignorable="d"
        Title="KeyboardSimulator" Height="704" Width="1114" KeyDown="LearningWindow_KeyDown" KeyUp="Window_KeyUp"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="/Menu.png" />
    </Window.Background>
    <Grid>
        <!--Тренажер-->
        <Grid x:Name="Trenacher">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="300" />
                <RowDefinition Height="350" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="1050" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--_____________________Строка вывода текста_____________________-->
            <Border Grid.Column="1" Grid.Row="1" Background="#FF313131" CornerRadius="10" BorderBrush="#FF4A4A4A"
                    BorderThickness="10,10,10,10.2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Background="#FF075C62">
                            <TextBlock Text="&lt;" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock x:Name="lessonNum" Text="Урок №1" Foreground="#FF4A70E9" FontSize="30"
                                       Margin="10,0,0,0" VerticalAlignment="Center" />
                            <TextBlock Text="&gt; &lt;" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="✓:" Foreground="#FF078F00" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock x:Name="SignsYes" Text="0" Foreground="#FF078F00" FontSize="30"
                                       Margin="10,0,0,0" VerticalAlignment="Center" />
                            <TextBlock Text="&gt; &lt;" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="✕: " Foreground="#FFB73C3C" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock x:Name="SignsNo" Text="0" Foreground="#FFB73C3C" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <!--<TextBlock Text="&gt; &lt;" Foreground="White" FontSize="30" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="WPM: " Foreground="#FFD2B913" FontSize="30" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WPM" Text="0" Foreground="White" FontSize="30" Margin="10,0,0,0" VerticalAlignment="Center"/>-->
                            <TextBlock Text="&gt; &lt;" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="⏱" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock x:Name="TimeMin" Text="00" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Text=":" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock x:Name="TimeSec" Text="00" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="&gt; &lt;" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                            <Border MouseLeftButtonUp="Border_MouseLeftButtonUp">
                                <TextBlock x:Name="Stop" Text="Stop" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                           VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="&gt;" Foreground="White" FontSize="30" Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="7" Grid.Row="1">
                        <TextBlock x:Name="ItemStart" FontSize="40" Foreground="#FF9B9999" Text="" FontFamily="Tahoma"
                                   ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                        <TextBlock x:Name="ItemCentre" FontSize="40" Foreground="#FF5CE7EB" TextDecorations="Underline"
                                   Text="" FontFamily="Tahoma" />
                        <TextBlock x:Name="ItemEnd" FontSize="40" Foreground="White" Text="" FontFamily="Tahoma" />
                    </StackPanel>
                </Grid>
            </Border>
            <!--__________________Клавиши_________________-->
            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource KeyboardCase}" Background="#FF91A0B7">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="0"
                                Background="{StaticResource LeftFingerPinky}" x:Name="id1">
                            <Grid>
                                <TextBlock Text="~" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="5,-7,0,0" FontSize="30" />
                                <TextBlock Text="`" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="10,21,0,0" FontSize="30" />
                                <TextBlock Text="Ё" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                           Margin="7,0,10,4" FontSize="24" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="1"
                                Background="{StaticResource LeftRingFinger}" x:Name="id2">
                            <Grid>
                                <TextBlock Text="!" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="10,-2,0,0" FontSize="20" />
                                <TextBlock Text="1" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="16,7,0,0" FontSize="25" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="2"
                                Background="{StaticResource LeftRingFinger}" x:Name="id3">
                            <Grid>
                                <TextBlock Text="@" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="0,-3,0,0" FontSize="20" />
                                <TextBlock Text="&quot;" HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Margin="0,0,4,0" FontSize="25" />
                                <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Top"
                                           Margin="0,7,0,0" FontSize="25" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="3"
                                Background="{StaticResource LeftMiddleFinger}" x:Name="id4">
                            <Grid>
                                <TextBlock Text="#" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="2,-3,0,0" FontSize="20" />
                                <TextBlock Text="№" HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Margin="0,0,4,0" FontSize="15" />
                                <TextBlock Text="3" HorizontalAlignment="Center" VerticalAlignment="Top"
                                           Margin="0,7,0,0" FontSize="25" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="4"
                                Background="{StaticResource LeftMiddleFinger}" x:Name="id5">
                            <Grid>
                                <TextBlock Text="$" HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="2,-3,0,0" FontSize="20" />
                                <TextBlock Text=";" HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Margin="0,-4,8,0" FontSize="20" />
                                <TextBlock Text="4" HorizontalAlignment="Center" VerticalAlignment="Top"
