                                <TextBlock Text="6" HorizontalAlignment="Center" VerticalAlignment="Top"
                                           Margin="0,7,0,0" FontSize="25" />
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource KeyStyle}" Grid.Column="7"
                                Background="{StaticResource RightIndexFinger}" x:Name="id8">
                            <Grid>
                                <TextBlock Text="&amp;" HorizontalAlignment="Left" VerticalAlignment="Top"
